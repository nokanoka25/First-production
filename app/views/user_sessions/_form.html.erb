
<div class="app-description">
  <%= form_with url: login_path, method: :post do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.check_box :remember_me %><br />
      <%= f.label :remember_me, "ログイン状態を保持する" %>
    </div>
    <div class="actions">
      <%= f.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>